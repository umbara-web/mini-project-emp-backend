
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  USER
  ADMIN
}
   
model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String?
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())

  @@map("users")
}

model RegisterToken {
  id Int @id @default(autoincrement())
  token String @unique
}