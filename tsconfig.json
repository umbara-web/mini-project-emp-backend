{
  "compilerOptions": {
    "target": "es2017", // Or a newer target like "es2020" for modern Node.js versions
    "module": "commonjs",
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": ".", // Root directory of your TypeScript source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Include all .ts files in the src and config directories
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
